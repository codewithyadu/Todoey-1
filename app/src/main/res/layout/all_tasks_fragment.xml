<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.allTasksFragment.AllTasksFragment">

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_pinned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pinned"
        app:layout_constraintTop_toBottomOf="@id/tv_notes"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/comfortaa_semibold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="30dp"
        android:textSize="16sp"
        android:layout_marginTop="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pinned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pinned"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_note"
        tools:itemCount="3"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all"
        app:layout_constraintTop_toBottomOf="@id/rv_pinned"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/comfortaa_semibold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="30dp"
        android:textSize="16sp"
        android:layout_marginTop="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_all"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        tools:itemCount="5"
        tools:listitem="@layout/item_note"
        android:layout_marginEnd="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>